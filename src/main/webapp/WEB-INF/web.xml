<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://JAVA.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Welcome</display-name>
  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>enrollCourse</servlet-name>
  <servlet-class>EnrollCourseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>enrollCourse</servlet-name>
  <url-pattern>/user/course-enroll</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>confirmSubmission</servlet-name>
  <servlet-class>ConfirmSubscriptionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>confirmSubmission</servlet-name>
  <url-pattern>/user/confirm-submission</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>dashboard</servlet-name>
  <servlet-class>AdminDashboard</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>dashboard</servlet-name>
  <url-pattern>/admin/dashboard</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>addCourse</servlet-name>
  <servlet-class>AddCourse</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>addCourse</servlet-name>
  <url-pattern>/admin/add-course</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>addCourseConfirm</servlet-name>
  <servlet-class>AddCourseConfirm</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>addCourseConfirm</servlet-name>
  <url-pattern>/admin/add-course-confirm</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>errorHandlerServlet</servlet-name>
  <servlet-class>ErrorHandler</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>errorHandlerServlet</servlet-name>
  <url-pattern>/error-handler</url-pattern>
  </servlet-mapping>
  <error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/error-handler</location>
  </error-page>
  
  <jsp-config>
<taglib>
<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
<taglib-location>/WEB-INF/c.tld</taglib-location>
</taglib>
</jsp-config>


</web-app>
